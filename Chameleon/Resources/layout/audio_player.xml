<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/audio_player_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:id="@+id/play_pause_button"
        android:textAlignment="center"
        android:text="@string/action_play"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:padding="3dp" 
        />

    <Button
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:id="@+id/rewind_button"
        android:textAlignment="center"
        android:text="@string/action_rewind"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:padding="3dp" 
        />

    <Button
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:id="@+id/fastforward_button"
        android:textAlignment="center"
        android:text="@string/action_fastforward"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:padding="3dp" 
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/loop_checkbox"
        android:text="@string/action_loop"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" 
        />
</LinearLayout>
